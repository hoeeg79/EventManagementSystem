            <CheckBox fx:id="cbFrontRow" mnemonicParsing="false" text="Front row" textFill="WHITE" />
            <CheckBox fx:id="cbFreeBeer" mnemonicParsing="false" text="Free beer" textFill="WHITE" />
         </children>
      </VBox>
   </children>
</AnchorPane>
