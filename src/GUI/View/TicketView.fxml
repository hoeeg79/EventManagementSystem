      <Label layoutX="25.0" layoutY="170.0" text="Email" />
      <VBox fillWidth="false" layoutX="46.0" layoutY="14.0" prefHeight="177.0" prefWidth="145.0" spacing="40.0" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="60.0">
         <children>
            <TextField fx:id="txtFirstName" />
            <TextField fx:id="txtLastName" prefHeight="50.0" prefWidth="145.0" />
            <TextField fx:id="txtEmail" />
            <TextField fx:id="txtPhone" />
